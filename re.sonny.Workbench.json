{
  "app-id": "re.sonny.Workbench",
  "runtime": "org.gnome.Platform",
  "runtime-version": "42",
  "sdk": "org.gnome.Sdk",
  "sdk-extensions": ["org.freedesktop.Sdk.Extension.node16"],
  "command": "workbench",
  "build-options": {
    "append-path": "/usr/lib/sdk/node16/bin"
  },
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri",
    "--socket=session-bus",
    "--share=network"
  ],
  "x-run-args": [],
  "modules": [
    {
      "name": "vte",
      "buildsystem": "meson",
      "config-opts": [
        "-Ddocs=false",
        "-Dgtk3=false",
        "-Dgtk4=true",
        "-Dvapi=false",
        "-Dglade=false"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://gitlab.gnome.org/GNOME/vte.git",
          "commit": "f4b915aea367d407f8ac527e1aed9425b8cea9e2"
        }
      ]
    },
    {
      "name": "libportal",
      "buildsystem": "meson",
      "config-opts": ["-Ddocs=false", "-Dvapi=false", "-Dbackends=gtk4"],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/flatpak/libportal/releases/download/0.6/libportal-0.6.tar.xz",
          "sha256": "88a12c3ba71bc31acff7238c280de697d609cebc50830c3766776ec35abc6566"
        }
      ]
    },
    {
      "name": "libsass",
      "buildsystem": "meson",
      "builddir": true,
      "config-opts": ["--libdir=/app/lib"],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/lazka/libsass.git",
          "branch": "meson"
        }
      ]
    },
    {
      "name": "sassc",
      "buildsystem": "meson",
      "builddir": true,
      "config-opts": ["--libdir=/app/lib"],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/lazka/sassc.git",
          "branch": "meson"
        }
      ]
    },
    {
      "name": "gtk",
      "buildsystem": "meson",
      "builddir": true,
      "config-opts": [
        "--libdir=/app/lib",
        "-Denable_vulkan=no",
        "-Dbuildtype=debugoptimized",
        "-Dprofile=devel"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://gitlab.gnome.org/GNOME/gtk.git",
          "branch": "main"
        },
        {
          "type": "patch",
          "path": "gtk-inspector.patch"
        }
      ]
    },
    {
      "name": "Workbench",
      "buildsystem": "meson",
      "builddir": true,
      "sources": [
        {
          "type": "dir",
          "path": "."
        }
      ]
    }
  ]
}
